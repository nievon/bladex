{% extends "home.twig" %}

{% block title %}Каталог телефонов{% endblock %}

{% block content %}
    <div class="container">
        <h2>Register</h2>
        {% if error %}<p style="color:red">{{ error }}</p>{% endif %}
        <form method="post" action="/register">
            <input class="input" name="name" type="text" placeholder="Name" required><br>
            <input class="input" name="phone" type="phone" placeholder="Phone" required><br>
            <input class="input" name="password" type="password" placeholder="Password" required><br>
            <button type="submit">Register</button>
        </form>
        <p>Already have an account? <a href="/login">Login</a></p>
    </div>
{% endblock %}